{
  "compilerOptions": {
    "target": "ESNext", // Specify ECMAScript target version
    "module": "NodeNext", // Specify module code generation
    "moduleResolution": "NodeNext", // Use Node.js-style resolution
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "dist" // Disallow inconsistently-cased references to the same file
  },
  "include": ["/**/*.ts"], // Specify which files to include
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude test files and node_modules
}
